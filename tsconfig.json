{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es2017", "es2016", "es2015", "es5"],
    "rootDir": "src",
    "moduleResolution": "node",
    "target": "es5",
    "outDir": "lib",
    "declaration": true
  },
  "include": ["src"],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
